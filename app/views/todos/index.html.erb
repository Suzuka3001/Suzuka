<h1>Todo list</h1> 
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>

<% if user_signed_in? %>
  <%= button_to "マイページへ", user_path(current_user.id) %>
<% end %>

<form method="POST" action="/todos">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div>
    <label for="task">Task Name</label>
    <input id="task" name="task" type="text" required>
  </div>
  <div>
    <select name="state">
      <% @status.each_with_index do |s,i| %>
      <option value="<%= s %>"><%= s %></option>
      <% end %>
    </select>
    <label>Task State</label>
  </div>
  <div>
    <input type="date" name="limit_date" required>
    <label>Task Limit Day</label>
  </div>
  <p>
    <button type="submit">create</button>
  </p>
</div>
</form>

<!-- flashメッセージを表示 -->
<% flash.each do |msg| %>
<p><%= msg %></p>
<% end %>

<table>...</table>

<% @todos.each do |t| %>
  <p><%= t.todos %></p>
<% end %>

<% @todos.each do |t| %>
  <p><%= t.todos %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Limit</th>
      <th>Task</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |t| %>
    <tr>
      <td><%= t.state %></td>
      <td><%= t.limit_date %></td>
      <td><%= t.task %></td>
      <td>
        <!-- 次のタスク詳細取得画面へのリンク -->
        <a href="/todos/<%= t.id %>">edit</a>
      </td>
      <td>
        <!-- まだ実装しない -->
         <button type="submit">delete</button>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

